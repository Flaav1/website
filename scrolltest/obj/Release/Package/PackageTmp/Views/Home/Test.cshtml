    <script type="text/javascript">
        $(document).ready(function () {

           
                var pContainerHeight = $('.back').height();

                $(window).scroll(function () {

                    var wScroll = $(this).scrollTop();

                    if (wScroll > 0)
                    {
                        $('.scrl').css('opacity', 0);
                    }
                    else {
                        
                        $('.scrl').css('opacity', 1);

                    }

                    if (document.documentElement.clientWidth > 720) {

                    if (wScroll <= pContainerHeight) {

                        var op = 1 - (wScroll / pContainerHeight);

                        $('.back h1').css({
                            'transform': 'translate(0px, ' + Math.round(wScroll / 2) + '%)',
                            'color': 'rgba(255,20,147,' + op + ')'
                        });


                        console.log(op);

                    }

                        if (wScroll > $('.back2').offset().top - $(window).height() / 2) {
